@model KooliProjekt.Data.InvestmentClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InvestmentClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name field -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description field -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Dropdown for Assets -->
            <div class="form-group">
                <label asp-for="AssetID" class="control-label">Select Asset</label>
                <select asp-for="AssetID" asp-items="@(new SelectList(ViewData["Assets"] as IEnumerable<SelectListItem>))" class="form-control"></select>
                <span asp-validation-for="AssetID" class="text-danger"></span>
            </div>

            <!-- Dropdown for Investment Classes -->
            <div class="form-group">
                <label asp-for="ClassID" class="control-label">Select Investment Class</label>
                <select asp-for="ClassID" asp-items="@(new SelectList(ViewData["InvestmentClasses"] as IEnumerable<SelectListItem>))" class="form-control"></select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
