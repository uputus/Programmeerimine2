@model IEnumerable<KooliProjekt.Data.Investment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asset)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoneyInvested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.AssetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoneyInvested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashBalance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvestmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvestmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvestmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
