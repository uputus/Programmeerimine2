@model KooliProjekt.Data.Asset

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for InvestmentClass -->
            <div class="form-group">
                <label asp-for="ClassID" class="control-label"></label>
                <select asp-for="ClassID" asp-items="ViewData['InvestmentClasses']" class="form-control"></select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AssetType" class="control-label"></label>
                <input asp-for="AssetType" class="form-control" />
                <span asp-validation-for="AssetType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AssetDetails" class="control-label"></label>
                <input asp-for="AssetDetails" class="form-control" />
                <span asp-validation-for="AssetDetails" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
